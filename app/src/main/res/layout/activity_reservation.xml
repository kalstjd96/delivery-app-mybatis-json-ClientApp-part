                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="방문희망일"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btn_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="날짜선택" />

                <TextView
