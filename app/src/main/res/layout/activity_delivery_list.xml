<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DeliveryList.DeliveryList_Activity"
    android:background="#EAEAEA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp">
        <Button
            android:textColor="@color/material_light_blue_accent_700"
            android:background="@drawable/blue_border"
            android:id="@+id/btn_se"
            android:textSize="20dp"
            android:text="보낸택배"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:textColor="#FFFFFF"
            android:background="@drawable/bluefill_border"
            android:id="@+id/btn_re"
            android:textSize="20dp"
            android:text="받은택배"
            android:enabled="false"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ListView
        android:id="@+id/deliverylist"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:dividerHeight="13dp"
        android:divider="#00000000 "
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>